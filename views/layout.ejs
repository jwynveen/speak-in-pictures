  <title><%= title || 'Speak in Pictures' %></title>

  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">

  <!-- build:css /styles/global.css -->
  <link rel="stylesheet" href="/styles/global.css">
  <!-- endbuild -->

  <link rel="icon" type="image/png" href="/images/logo-16x16.png" sizes="16x16">
  <link rel="icon" type="image/png" href="/images/logo-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/images/logo-64x64.png" sizes="64x64">
  <link rel="icon" type="image/png" href="/images/logo-128x128.png" sizes="128x128">
