          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <img src="./images/logo-35.png">
          Speak in Pictures
        </a>
      </div>
      <div id="navbar" class="collapse navbar-collapse pull-right">
        <ul class="nav navbar-nav">
          <li><a href="/sign-in">Sign In</a></li>
          <!--<router-link active-class="active" tag="li" to="/about"><a>About</a></router-link>-->
          <!--<router-link active-class="active" tag="li" to="/contact"><a>Contact</a></router-link>-->
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <%- body %>

  <footer class="bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Speak in Pictures 2017</p>
    </div>
  </footer>
